{
  "version": 2,
  "name": "hotfix",
  "builds": [
    { "src": "frontend/next.config.js", "use": "@now/next" },
    { "src": "backend/index.js", "use": "@now/node" }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/$1",
      "headers": { "x-request-path": "/$1" }
    },
    {
      "src": "/api",
      "dest": "backend"
    },
    {
      "src": "/_next/static/(?:[^/]+/pages|chunks|runtime)/.+",
      "headers": { "cache-control": "immutable,max-age=31536000" }
    }
  ]
}
